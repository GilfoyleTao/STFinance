// Ionic Variables and Theming. For more info, please see:
// http://ionicframework.com/docs/theming/
// Font path is used to include ionicons,
// roboto, and noto sans fonts
$font-path: "../assets/fonts";
// The app direction is used to include
// rtl styles in your app. For more info, please see:
// http://ionicframework.com/docs/theming/rtl-support/
$app-direction: ltr;
@import "ionic.globals";

$colors: ( primary: #488aff, secondary: #32db64, danger: #f53d3d, light: #f4f4f4, dark: #222, juice: #fe906a, MintCream :#FFFFFF);
.toolbar-ios-MintCream .bar-button-default-ios{
    color: #CB0101 !important;
}
.toolbar-md-MintCream .bar-button-default-md{
    color: #CB0101 !important;
}

$toolbar-md-height:44px;
.ion-tab-icon-base {
    width: 32px;
    height: 26px;
    padding: 4px 4px 2px;
}
.ion-tab-icon-md-base {
    min-width: 0 !important;
    height: 26px;
}
$checkbox-md-icon-border-radius:50%;
$tabs-ios-tab-text-color-active	:#CB0101;
$tabs-md-tab-text-color-active	:#CB0101;
$tabImageName: 'home' 'product' 'property' 'mine';
@for $i from 1 to 5 {
    //for ios  
    .ion-ios-tab-#{nth($tabImageName, $i)} {
        @extend .ion-tab-icon-base;
        content: url("../assets/icon/#{nth($tabImageName, $i)}.svg");
    }
    .ion-ios-tab-#{nth($tabImageName, $i)}-outline {
        @extend .ion-tab-icon-base;
        content: url("../assets/icon/#{nth($tabImageName, $i)}_off.svg");
    } // for android  
    .tabs-md .tab-button[aria-selected=true] {
        .ion-md-tab-#{nth($tabImageName, $i)} {
            @extend .ion-tab-icon-md-base;
            content: url("../assets/icon/#{nth($tabImageName, $i)}.svg");
        }
    }
    .tabs-md .tab-button[aria-selected=false] {
        .ion-md-tab-#{nth($tabImageName, $i)} {
            @extend .ion-tab-icon-md-base;
            content: url("../assets/icon/#{nth($tabImageName, $i)}_off.svg");
        }
    }
}

@import "ionic.theme.default";
